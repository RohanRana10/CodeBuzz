<h1>
    <%= title %>
</h1>

<section id="feed-posts">
    <h4>Posts</h4>
    <form action="/posts/create" method="post" id="new-post-form">
        <textarea name="content" id="new-post-content" cols="30" rows="3" placeholder="Type Here.."></textarea>
        <input type="submit" value="Post">
    </form>
    <div id="post-list-container">
        <ul>
            <%for(post of posts){ %>
                <li>
                    <%= post.content %>
                    <br>
                    <small>
                        <%= post.user.name %>
                    </small>
                </li>
            <%}%>
        </ul>
    </div>
    
</section>